<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block
                class="Magento\Customer\Block\Account\SortLinkInterface"
                ifconfig="deletecustomer/generaloptions/enabled"
                name="customer-account-delete-link"
            >
                <arguments>
                    <argument name="path" xsi:type="string">deletecustomer/account</argument>
                    <argument name="label" xsi:type="string" translate="true">Delete Account</argument>
                    <argument name="sortOrder" xsi:type="number">40</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
